<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:u="https://irihi.tech/ursa">
    <ControlTheme x:Key="{x:Type u:WindowPinButton}"
                  TargetType="u:WindowPinButton"
                  BasedOn="{StaticResource {x:Type u:IconButton}}">
        <Setter Property="Width" Value="36" />
        <Setter Property="Height" Value="36" />
        <Setter Property="Icon" Value="{StaticResource SemiIconUnlock}" />
        <Setter Property="UnpinnedIcon" Value="{StaticResource SemiIconUnlock}" />
        <Setter Property="PinnedIcon" Value="{StaticResource SemiIconLock}" />
        <Setter Property="SyncIconWithState" Value="True" />
        <Setter Property="ToolTip.Tip" Value="Toggle pin state" />
    </ControlTheme>
</ResourceDictionary>
